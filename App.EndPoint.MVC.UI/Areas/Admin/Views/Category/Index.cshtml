@model List<CategoryDTO>

    <br />
    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success">ایجاد دسته بندی جدید</a>
    <br />

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>شناسه</th>
                <th>اسم</th>
                <th>تاریخ ایجاد</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.CreationDate</td>
                <td>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">حذف</a>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">ویرایش</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
