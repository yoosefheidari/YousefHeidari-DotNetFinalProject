@model List<OrderDTO>
@if (Model.Count == 0)
{
    <div class="alert alert-success m-4" role="alert">
        <div><input style="display:none" /></div>
        <h4 class="alert-heading">سفارش</h4>
        <hr>
        <br>
        <p>سفارشی ثبت نشده است</p>
        <hr>
    </div>
}
else
{
    @foreach (var order in Model)
    {

        <div class="card m-3" style="width: 18rem;">
            <img class="card-img-top" src="~/AdminAreaTemplate/img/testimonial-1.jpg" height="120px" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">توضیحات سفارش</h5>
                <p class="card-text">@order.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">تاریخ ثبت : @order.CreationDate</li>
                <li class="list-group-item">دسته بندی : @order.ServiceId</li>
                <li class="list-group-item">کاربر : @order.CustomerId</li>
                <li class="list-group-item">متخصص : @order.ConfirmedExpertId</li>
                <li class="list-group-item">قیمت : @order.FinalPrice</li>
                <li class="list-group-item">تایید شده توسط کاربر : @order.IsConfirmedByCustomer</li>
                <li class="list-group-item">
                    وضعیت : @order.FinalPrice
                    <div class="pg-bar mb-3">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped bg-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </li>
            </ul>
            <div class="card-body">
                <a asp-area="Admin" asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">حذف</a>
                <a asp-area="Admin" asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id" class="btn btn-success">ویرایش</a>
            </div>
        </div>
    }
}