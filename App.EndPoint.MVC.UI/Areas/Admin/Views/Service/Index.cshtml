@model List<ServiceDTO>

<br />
<a aasp-area="Admin" asp-controller="Service" asp-action="Create" class="btn btn-success">ایجاد خدمت جدید</a>
<br />

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>اسم</th>
            <th>توضیحات</th>
            <th>قیمت</th>
            <th>دسته بندی</th>
            <th>تاریخ ایجاد</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Id</td>
                <td>@service.Title</td>
                <td>@service.ShortDescription</td>
                <td>@service.Price</td>

                @foreach (var item in ViewBag.Categories)
                {
                    if (item.Value == service.CategoryId.ToString())
                    {
                        <td>@item.Text</td>
                    }
                }

                <td>@service.CreationDate</td>
                <td>
                    <a asp-area="Admin" asp-controller="Service" asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger m-1">حذف</a>
                    <a asp-area="Admin" asp-controller="Service" asp-action="Edit" asp-route-id="@service.Id" class="btn btn-success m-1">ویرایش</a>
                    <a asp-area="Admin" asp-controller="Service" asp-action="Files" asp-route-id="@service.Id" class="btn btn-warning m-1">مشاهده تصاویر</a>
                </td>
            </tr>
        }
    </tbody>
</table>
