<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <meta charset="utf-8">
    <title>پنل ادمین</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/AdminAreaTemplate/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/AdminAreaTemplate/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />



    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/AdminAreaTemplate/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/AdminAreaTemplate/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>

        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <partial name="_Sidebar" />
        <!-- Sidebar End -->
        <!-- Content Start -->

        <div class="content">

            <!-- Navbar Start -->
            <partial name="_Navbar" />
            <!-- Navbar End -->

            <main class="content">
                <div class="container-fluid p-0">
                    <div class="row">
                        <div class="w-100">
                            <div class="row">
                                <div class="col-12">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <!-- Footer Start -->
            <partial name="_Footer" />
            <!-- Footer End -->
        </div>

        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminAreaTemplate/lib/chart/chart.min.js"></script>
    <script src="~/AdminAreaTemplate/lib/easing/easing.min.js"></script>
    <script src="~/AdminAreaTemplate/lib/waypoints/waypoints.min.js"></script>
    <script src="~/AdminAreaTemplate/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/AdminAreaTemplate/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/AdminAreaTemplate/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/AdminAreaTemplate/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/AdminAreaTemplate/js/main.js"></script>
</body>

</html>