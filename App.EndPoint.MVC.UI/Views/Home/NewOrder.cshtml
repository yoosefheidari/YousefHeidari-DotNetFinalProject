@model OrderDTO

<form asp-controller="Home" asp-action="NewOrder" method="post" enctype="multipart/form-data">
    <input asp-for="ServiceId" value="@ViewBag.ServiceId" style="display:none" />
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input type="text" asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group row p-3">
        <label for="formFileLg" class="form-label">تصاویر مربوط به سفارش شما</label>
        <div class="col-8">
            <input name="files" class="form-control" type="file" id="formFileLg" multiple />
        </div>
    </div>

    <input type="submit" value="ثبت سفارش" class="btn btn-success" />
</form>

