<div class="container my-auto">
    <div class="row">
        <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card mt-8">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-warning shadow-success border-radius-lg py-3 pe-1 text-center py-4">
                        <h4 class="font-weight-bolder text-white mt-1">Sign In</h4>
                        <p class="mb-1 text-sm text-white">Enter your email and password to Sign In</p>
                    </div>
                </div>
                <div class="card-body">
                    <form role="form" class="text-start" asp-area="" asp-controller="Account" asp-action="Login" method="post">
                        <div class="input-group input-group-static mb-4">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control" placeholder="نام کاربری">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="input-group input-group-static mb-4">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="•••••••••••••">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch d-flex align-items-center mb-3">
                            <input class="form-check-input" type="checkbox" id="remember" name="remember" value="false"  onclick="isPersistent()">
                            <label class="form-check-label mb-0 me-5" for="remember">مرا به خاطر بسپار</label>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-dark w-100 mt-3 mb-0">ورود</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                    <p class="mb-4 text-sm mx-auto">
                        اکانت ندارید؟
                        <a asp-area="" asp-controller="Account" asp-action="Register" class="text-success text-gradient font-weight-bold">ثبت نام</a>
                    </p>
                    <p class="mb-4 text-sm mx-auto">
                        رمز عبور را فراموش کرده اید؟
                        <a asp-area="" asp-controller="Account" asp-action="ForgetPassword" class="text-success text-gradient font-weight-bold">بازیابی</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function isPersistent(){
        var result = document.getElementById("remember").value;
        if(result=="false"){
            document.getElementById("remember").value=true;
        }
        else{
            document.getElementById("remember").value=false;
        }
    }
</script>








