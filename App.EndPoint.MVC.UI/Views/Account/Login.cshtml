@model UserDTO
<div class="container my-auto">
    <div class="row">
        <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                        <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">ورود به سایت</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form role="form" class="text-start" asp-area="" asp-controller="Account" asp-action="Login" method="post">
                        <div asp-validation-summary=All class="is-invalid"></div>                        
                        <div class="input-group input-group-outline my-3">                            
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control">
                        </div>

                        <div class="input-group input-group-outline mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control">
                        </div>

                        <div class="form-check form-switch d-flex align-items-center mb-3">
                            <input onclick="isPersistent()" class="form-check-input" type="checkbox" id="remember" name="remember" value="false">
                            <label class="form-check-label mb-0 me-5" for="remember">مرا به خاطر بسپار</label>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2" style="font-size:22px;">وارد شو</button>
                        </div>

                        <p class="mt-4 text-md text-center">
                            اکانت ندارید؟
                            <a asp-area="" asp-controller="Account" asp-action="Register" class="text-primary text-gradient font-weight-bold text-lg">ثبت نام</a>
                        </p>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function isPersistent(){
        var result = document.getElementById("remember").value;
        if(result=="false"){
            document.getElementById("remember").value=true;
        }
        else{
            document.getElementById("remember").value=false;
        }
    }
</script>








