@{
    Layout = "_AnonymosLayout";
}
@model UserDTO
<!-- Sign Up Start -->
<form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data">
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h3>فرم ثبت نام</h3>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="font-size:0.7rem"></div>
                    <div class="form-group-lg mb-3">
                        <label asp-for="UserName" style="font-size:.7rem"></label>
                        <input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری">
                        <span asp-validation-for="UserName" class="text-danger" style="font-size:.7rem"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" style="font-size:.7rem"></label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="ایمیل">
                        <span asp-validation-for="Email" class="text-danger" style="font-size:.7rem"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FirstName" style="font-size:.7rem"></label>
                        <input class="form-control" asp-for="FirstName" placeholder="نام">
                        <span asp-validation-for="FirstName" class="text-danger" style="font-size:.7rem"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LastName" style="font-size:.7rem"></label>
                        <input class="form-control" asp-for="LastName" placeholder="نام خانوادگی">
                        <span asp-validation-for="LastName" class="text-danger" style="font-size:.7rem"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="floatingPassword" style="font-size:.7rem">رمز عبور</label>
                        <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password">                        
                    </div>                    

                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">ثبت نام</button>
                    <p class="text-center mb-0">
                        از قبل اکانت دارید؟
                        <a asp-area="" asp-controller="Account" asp-action="Login">ورود</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Sign Up End -->